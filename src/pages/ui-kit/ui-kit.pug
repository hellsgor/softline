extends Layouts/main-layout.pug

block variables
  - let title = 'Softline - UI-kit';
  - let pageClassName = 'ui-kit';

block styles
  link(href=require('./ui-kit.scss') rel='stylesheet')
block content
  main.page__main(class=pageClassName)
    .container
      h1 UI-kit

      h2 Button
      include UIKit/button/button.pug
      +button('test-button-primary', '', 'button', 'Primary')
      hr

block scripts
  script(src=require('./ui-kit.js') defer)
