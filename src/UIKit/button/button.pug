mixin button(buttonID, href, buttonType, buttonText, iconName='')
  if href
    a.button(
      href=href,
      id=buttonID)&attributes(attributes) #{buttonText}
  else
    button.button(
      type=buttonType,
      id=buttonID)&attributes(attributes) #{buttonText}

      if iconName
        include Components/svg-icon/svg-icon.pug
        +svgIcon(iconName)
